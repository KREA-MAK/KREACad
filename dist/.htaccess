# KreaCAD - Advanced 3D CAD Viewer
# SEO and Performance Optimized .htaccess Configuration

# Force HTTPS redirect
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule (.*) https://kreacad.com/$1 [R=301,L]

# Remove www from domain (canonical URL)
RewriteCond %{HTTP_HOST} ^www\.kreacad\.com [NC]
RewriteRule ^(.*)$ https://kreacad.com/$1 [R=301,L]

# Add trailing slash for directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ https://kreacad.com/$1/ [R=301,L]

# Cache Control for Performance and SEO
<IfModule mod_expires.c>
    ExpiresActive On

    # HTML files - short cache for frequent updates
    ExpiresByType text/html "access plus 1 hour"

    # CSS and JavaScript - 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Images - 6 months
    ExpiresByType image/png "access plus 6 months"
    ExpiresByType image/jpeg "access plus 6 months"
    ExpiresByType image/gif "access plus 6 months"
    ExpiresByType image/webp "access plus 6 months"
    ExpiresByType image/svg+xml "access plus 6 months"

    # Fonts - 1 year
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"

    # CAD files - 1 day (for demonstration)
    ExpiresByType application/step "access plus 1 day"
    ExpiresByType application/iges "access plus 1 day"
    ExpiresByType model/stl "access plus 1 day"
    ExpiresByType model/obj "access plus 1 day"

    # XML files (sitemaps) - 1 day
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType text/xml "access plus 1 day"
</IfModule>

# GZIP Compression for faster loading
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-otf
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# Security Headers for SEO trust signals
<IfModule mod_headers.c>
    # X-Frame-Options
    Header always append X-Frame-Options SAMEORIGIN

    # X-Content-Type-Options
    Header set X-Content-Type-Options nosniff

    # X-XSS-Protection
    Header set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions Policy
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# MIME Types for CAD files
<IfModule mod_mime.c>
    # 3D CAD file types
    AddType application/step .step .stp
    AddType application/step .stpz
    AddType application/iges .iges .igs
    AddType model/stl .stl
    AddType model/obj .obj
    AddType model/gltf+json .gltf
    AddType model/gltf-binary .glb
    AddType application/fbx .fbx
    AddType model/x3d+xml .x3d
    AddType model/usd .usdz
    AddType application/dxf .dxf
    AddType image/svg+xml .svg
    AddType text/plain .xyz
    AddType model/ply .ply
    AddType application/off .off
    AddType model/3mf .3mf
    AddType application/amf .amf
    AddType model/vnd.collada+xml .dae
    AddType model/vrml .wrl
    AddType application/3dm .3dm
    AddType application/3ds .3ds
    AddType application/fcstd .fcstd
    AddType application/ifc .ifc
    AddType application/bim .bim
    AddType application/brep .brep
</IfModule>

# Custom Error Pages for better UX
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# SEO-friendly redirects for old URLs (if any)
# RewriteRule ^old-page$ /new-page [R=301,L]

# Prevent access to sensitive files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Prevent access to development files
<FilesMatch "(package\.json|webpack\.config\.js|gulpfile\.js|Gruntfile\.js)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>
